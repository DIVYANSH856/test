abstract class Account{
    double interestRate;
    double amount;
    abstract double calculateInterest(int a);
}

class F_D extends Account{
   int noOfDays;
    double Age;
    double calculateInterest(int noOfDays) {
        if(amount<10000000){
            if(noOfDays>=7 && noOfDays<=14){
                if(Age>=60){
                    interestRate = 5;
                }else interestRate = 4.5;
            } else if (noOfDays>=15 && noOfDays<=29) {
                if(Age>=60){
                    interestRate = 5.25;
                }else interestRate = 4.75;
            } else if (noOfDays>=30 && noOfDays<=45) {
                if(Age>=60){
                    interestRate = 6;
                }else interestRate = 5.5;
            } else if (noOfDays>=45 && noOfDays<=60) {
                if(Age>=60){
                    interestRate = 7.5;
                }else interestRate = 7.0;
            } else if (noOfDays>=61 && noOfDays<=184) {
                if(Age>=60){
                    interestRate = 8;
                }else interestRate = 7.5;
            } else if (noOfDays>=185 && noOfDays<=365) {
                if(Age>=60){
                    interestRate = 8.5;
                }else interestRate = 8;
            }
        }else{
            if(noOfDays>=7 && noOfDays<=14) interestRate = 6.50;
            else if (noOfDays>=15 && noOfDays<=45) {
                interestRate = 6.75;
            } else if (noOfDays>=45 && noOfDays<=60) {
                interestRate = 8;
            } else if (noOfDays>=61 && noOfDays<=184) {
                interestRate = 8.50;
            } else if (noOfDays>=185 && noOfDays<=365) {
                interestRate = 10;
            }
        }

        double amount_gain  = amount * (interestRate/100);
        return amount_gain;
    }
}
